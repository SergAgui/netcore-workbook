@model IEnumerable<CP1.Models.Customer>
@{
    ViewData["Title"] = "Customer";
}
    <h2>New Customer</h2>
    <br /><br />
    <a asp-action="Add">Add New Customer Profile</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Full Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit Customer</a>
                    <a asp-action="Remove" asp-route-id="@item.Id">Remove Customer</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
